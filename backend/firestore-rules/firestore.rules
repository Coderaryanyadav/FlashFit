rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isDriver() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'driver';
    }

    // Users: Users can read/write their own data, BUT cannot change role
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId) && request.resource.data.role == 'customer'; // Only create as customer
      allow update: if isAdmin() || (isOwner(userId) && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'totalOrders']));
    }

    // Drivers: Public read (for basic info), write only by owner or admin
    // Verification fields protected
    match /drivers/{driverId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(driverId);
      allow update: if (isOwner(driverId) && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['isVerified', 'score', 'earnings'])) || isAdmin();
    }

    // Helper for Sellers
    function isSeller() {
      // Check if user has a store document or a specific role claim
      return isAuthenticated() && (
        exists(/databases/$(database)/documents/stores/$(request.auth.uid)) ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'seller'
      );
    }

    // Stores: Public read, Owner/Admin write
    match /stores/{storeId} {
      allow read: if true;
      allow write: if isOwner(storeId) || isAdmin();
    }

    // Products: Public read, Admin/Seller write
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin() || (isSeller() && request.resource.data.storeId == request.auth.uid);
      allow update: if isAdmin() || (isSeller() && (resource.data.storeId == request.auth.uid || request.resource.data.storeId == request.auth.uid));
      allow delete: if isAdmin() || (isSeller() && resource.data.storeId == request.auth.uid);
    }

    // Orders:
    // - Customers can create and read their own
    // - Drivers can read assigned orders and update status
    // - Sellers can read orders for their store
    // - Admins can do everything
    match /orders/{orderId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || 
        resource.data.driverId == request.auth.uid || 
        (isSeller() && resource.data.storeId == request.auth.uid) ||
        isAdmin()
      );
      allow update: if isAdmin() || (
        isDriver() && 
        resource.data.driverId == request.auth.uid && 
        request.resource.data.diff(resource.data).affectedKeys().hasAny(['status', 'deliveryOtp', 'location', 'updatedAt'])
      );
    }
    
    // Driver Locations: 
    // - Drivers write their own
    // - Admins can read all
    // - Customers can read ONLY if the driver is assigned to their active order (Requires complex query or claim)
    // - For MVP, we restrict to Admin and Owner, or specific active order check if possible.
    // - Let's tighten it: Only Admin and the Driver themselves can read raw location stream.
    // - The customer app should receive location updates via the Order document (which we update via backend trigger), NOT by reading driverLocations directly.
    match /driverLocations/{driverId} {
      allow write: if isOwner(driverId);
      allow read: if isOwner(driverId) || isAdmin(); 
    }

    // Messages: Users read/write their own threads
    match /messages/{messageId} {
      allow create: if isAuthenticated();
      allow read: if resource.data.userId == request.auth.uid || isAdmin();
    }

    // Coupons: Public read, Admin write
    match /coupons/{couponId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Analytics: Admin only
    match /analytics/{docId} {
      allow read, write: if isAdmin();
    }

    // Reviews: Users can create, read approved only, admin can approve/delete
    match /reviews/{reviewId} {
      allow create: if isAuthenticated() 
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.approved == false;
      allow read: if resource.data.approved == true || isAdmin();
      allow update: if isAdmin(); // Only admin can approve
      allow delete: if isAdmin();
    }

    // User Addresses: Users can manage their own addresses
    match /users/{userId}/addresses/{addressId} {
      allow read, write: if isOwner(userId);
    }

    // User Cart: Users can manage their own cart
    match /users/{userId}/cart/{cartId} {
      allow read, write: if isOwner(userId);
    }
  }
}